# TeleTime POS - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# API Configuration
# ============================================================================

# API URL (leave empty to use Vite proxy in development)
# In production, set this to your API server URL
VITE_API_URL=http://localhost:5000/api

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ============================================================================
# Application Settings
# ============================================================================

# Application name (displayed in header and login)
VITE_APP_NAME=TeleTime POS

# Session timeout in minutes
VITE_SESSION_TIMEOUT=480

# ============================================================================
# Store Information (for receipts and reports)
# ============================================================================

VITE_STORE_NAME=TeleTime Communications
VITE_STORE_ADDRESS=123 Main Street
VITE_STORE_CITY=Toronto, ON M5V 1A1
VITE_STORE_PHONE=(416) 555-1234

# ============================================================================
# Tax Configuration
# ============================================================================

# Default province for tax calculation
# Valid values: ON, BC, AB, SK, MB, QC, NB, NS, PE, NL, NT, YT, NU
VITE_DEFAULT_TAX_PROVINCE=ON

# ============================================================================
# Feature Flags
# ============================================================================

# Enable barcode scanner input detection
VITE_ENABLE_BARCODE_SCANNER=true

# Enable cash drawer integration (requires hardware)
VITE_ENABLE_CASH_DRAWER=false

# Enable receipt printer integration (requires hardware)
VITE_ENABLE_RECEIPT_PRINTER=false

# ============================================================================
# Debug Options
# ============================================================================

# Enable debug logging in console
VITE_DEBUG=false
